@{
    ViewData["Title"] = "WellTest";
}
@model UseApi.Models.WellTest

<div class="row">
    <div class="mb-2 text-center col-lg-12 @(ViewBag.StatusCode == 200 ? "bg-success" : "bg-danger")">
        <b>@(ViewBag.StatusCode == 200 ? "Connect" : "Not Connect") [@ViewBag.StatusCode] - with API Ocelot</b>
    </div>
    <div class="col-lg-6">
        <h1>WellTest: Form Add</h1> <hr />
        @if (ViewBag.ShowTable)
        {
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Id">Id</label>
                    <input asp-for="Id" class="form-control" required value="@ViewBag.LastId">
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date">Date</label>
                    <input asp-for="Date" type="date" class="form-control" required>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bopd">Bopd</label>
                    <input asp-for="Bopd" class="form-control" required>
                    <span asp-validation-for="Bopd" class="text-danger"></span>
                </div>
                <div class="form-group text-end mt-2">
                    <a class="btn btn-danger btn-sm" asp-controller="WellTest" asp-action="Index">Back</a>
                    <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                </div>
            </form>
        }
    </div>
</div>
